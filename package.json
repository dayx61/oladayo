{
  "name": "professional-it-portfolio",
  "version": "1.0.0",
  "description": "Professional IT Portfolio with AI Chatbot",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nodemailer": "^6.9.7"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build:client && cp -r client/dist ./dist",
    "build:server": "npm --prefix server run build",
    "build:client": "npm --prefix client run build",
    "start": "node server/dist/index.js",
    "deploy": "vercel",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
