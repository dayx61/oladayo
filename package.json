{
  "name": "oladayo-portfolio",
  "version": "1.0.0",
  "description": "Oladayo Alabi - IT Professional Portfolio",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npx vite build --config client/vite.config.ts --outDir dist && npm run build:server",
    "build:server": "cd server && npm run build",
    "start": "node server/dist/index.js",
    "deploy": "vercel"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
